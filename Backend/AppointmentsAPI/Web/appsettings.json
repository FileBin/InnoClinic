{
  "AllowedHosts": "*",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "Logs/latest.log" } }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  
  "AppointmentsDb": {
    "Host": "localhost",
    "Port": "5432",
    "User": "appointmentsAPI",
    "Password": "",
    "Database": "appointments"
  },
  
  "AdminRoleName": "InnoClinicAdmin",
  "ReceptionistRoleName": "InnoClinicReceptionist",
  "DoctorRoleName": "InnoClinicDoctor",
  "PatientRoleName": "InnoClinicPatient",
  "SwaggerTitle": "AppointmentsAPI",

  "IdentityServer": {
    "ApiName": "appointmentsAPI",
    "Authority": "https://sts.innoclinic.local",
    "ApiScope": { 
      "Name": "appointmentsAPI",
      "Desc": "Full access to AppointmentsAPI"
    },
    "OAuth": {
      "ClientId": "appointmentsApi_swagger",
      "ClientSecret": "",
      "AppName": "Swagger UI for AppointmentsApi"
    }
  }
}